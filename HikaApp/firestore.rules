rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();
      
      // Users can only create/update their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Trails collection
    match /trails/{trailId} {
      // Anyone authenticated can read trails
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create trails
      allow create: if isAuthenticated();
      
      // Anyone authenticated can update trails (for ratings, etc.)
      allow update: if isAuthenticated();
      
      // Only allow deletion by authenticated users (can restrict further if needed)
      allow delete: if isAuthenticated();
    }
    
    // Posts collection
    match /posts/{postId} {
      // Anyone authenticated can read posts
      allow read: if isAuthenticated();
      
      // Users can only create posts with their own userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can only update/delete their own posts
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Trail ratings collection
    match /trailRatings/{ratingId} {
      // Anyone authenticated can read ratings
      allow read: if isAuthenticated();
      
      // Users can create/update their own ratings
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Active trails collection
    match /activeTrails/{userId} {
      // Users can only read/update their own active trail
      allow read, write: if isOwner(userId);
    }
    
    // Achievements collection (read-only for users)
    match /achievements/{achievementId} {
      // Anyone authenticated can read achievements
      allow read: if isAuthenticated();
      
      // Only allow creation/update by admin (you can restrict this further)
      // For now, allow authenticated users to create (you may want to restrict this)
      allow create, update, delete: if false; // Disable for now, manage via Firebase Console
    }
  }
}

